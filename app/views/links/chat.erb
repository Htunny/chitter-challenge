<html>
<head>
  <meta charset="utf-8">
  <title> Chitter </title>
</head>
<body>
  <% if user_name %>
  <h2> Welcome, <%= user_name.username %>! </h2>
  <% end %>

  <form action="/chat/add" method="get">
  <input type="submit" value="Peep a new message">
  </form>

  <h3> Latest Peeps </h3>
  <ul id='peeps'>
    <% @peeps.each do |peeps| %>
    <li>
      Peep: <%= peeps.message %>
    </li>
    <% end %>
</ul>
</body>
<form action='/session' method='post'>
  <input type='hidden' name='_method' value='delete'>
  <input type='submit' value='Log out'>
</form>
